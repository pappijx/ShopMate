generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role?    // Nullable - chosen after login
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  businesses     Business[] // Seller can own multiple businesses
  orders         Order[]    // Buyer orders
  ordersAsSeller Order[]    @relation("SellerOrders") // Orders for seller's products
}

model Business {
  id           String   @id @default(uuid())
  name         String
  description  String?
  logoUrl      String?
  address      String?
  ownerContact String?
  ownerId      String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  owner     User        @relation(fields: [ownerId], references: [id])
  products  Product[]
  orders    Order[]
  orderItems OrderItem[]
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  slug      String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subcategories Subcategory[]
  products      Product[]
}

model Subcategory {
  id         String   @id @default(uuid())
  name       String
  slug       String
  categoryId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category Category  @relation(fields: [categoryId], references: [id])
  products Product[]

  @@unique([categoryId, slug])
}

model Product {
  id            String   @id @default(uuid())
  name          String
  description   String?
  price         Float
  stock         Int      @default(0)
  imageUrl      String?
  businessId    String
  categoryId    String
  subcategoryId String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  business     Business     @relation(fields: [businessId], references: [id])
  category     Category     @relation(fields: [categoryId], references: [id])
  subcategory  Subcategory  @relation(fields: [subcategoryId], references: [id])
  orderItems   OrderItem[]
}

model Order {
  id         String      @id @default(uuid())
  userId     String      // Buyer
  businessId String      // Which business this order is from
  sellerId   String      // Owner of the business
  status     OrderStatus @default(PENDING)
  total      Float
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  user       User        @relation(fields: [userId], references: [id])
  business   Business    @relation(fields: [businessId], references: [id])
  seller     User        @relation("SellerOrders", fields: [sellerId], references: [id])
  orderItems OrderItem[]
}

model OrderItem {
  id         String @id @default(uuid())
  orderId    String
  productId  String
  businessId String // Track business for each item
  quantity   Int
  price      Float  // Price at time of purchase

  order    Order    @relation(fields: [orderId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])
  business Business @relation(fields: [businessId], references: [id])
}

enum Role {
  BUYER
  SELLER
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
